@model IEnumerable<ProFit.Models.pro_fitdb.site_settings>


<div id="footer">
    <div class="container">
        <div class="row">
            <div class="col-md-4 animate-box">
                <h3 class="section-title">Hakkımızda</h3>
                <p>2016 yılından beri profesyonel anlamda kişisel antrenörlük,egzersiz koçluğu ,antreman sistemleri eğitimleri veriyoruz.Amacımız biriktirdiğimiz tecrübe ve bilgiyi insanlara aktarıp herkesin faydalanmasını sağlayabilmek.Ekibimizdeki herkes alanında uzman ve bilgili kişilerdir.Sizlere hizmet etmek için elimizden geleni yapıyoruz.</p>
            </div>
            @foreach(var item in Model) {
            <div class="col-md-4 animate-box">
                <h3 class="section-title">Bizim adresimiz</h3>
                <ul class="contact-info">
                    <li><i class="icon-map-marker"></i>Isparta/merkez Süleyman demirel üniversitesi</li>
                    <li><i class="icon-phone"></i>@item.site_settings_PHONE</li>
                    <li><i class="icon-envelope"></i><a href="#">@item.site_settings_MAIL</a></li>
                    <li><i class="icon-globe2"></i><a href="#">www.yoursite.com</a></li>
                </ul>
            </div>
            }
            <div class="col-md-4 animate-box">
                <h3 class="section-title">Bize ulaş</h3>
                <form class="contact-form">
                    <div class="form-group">
                        <label for="name" class="sr-only">İsim</label>
                        <input type="name" class="form-control" id="name" placeholder="İsim">
                    </div>
                    <div class="form-group">
                        <label for="email" class="sr-only">Email</label>
                        <input type="email" class="form-control" id="email" placeholder="Email">
                    </div>
                    <div class="form-group">
                        <label for="message" class="sr-only">Mesaj</label>
                        <textarea class="form-control" id="message" rows="7" placeholder="Mesaj"></textarea>
                    </div>
                    <div class="form-group">
                        <input type="submit" id="btn-submit" class="btn btn-send-message btn-md" value="Mesaj gönder">
                    </div>
                </form>
            </div>
        </div>
        <div class="row copy-right">
            @foreach (var item in Model)
            {
                <div class="col-md-6 col-md-offset-3 text-center">
                    <p class="fh5co-social-icons">
                        <a href="@item.site_settings_TWITTER"><i class="icon-twitter2"></i></a>
                        <a href="@item.site_settings_INSTAGRAM"><i class="icon-instagram"></i></a>
                        <a href="@item.site_settings_YOUTUBE"><i class="icon-youtube"></i></a>
                    </p>

                </div>
            }
        </div>
    </div>
</div>

