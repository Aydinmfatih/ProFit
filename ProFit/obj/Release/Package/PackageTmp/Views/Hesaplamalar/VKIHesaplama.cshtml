
@{
    ViewBag.Title = "VKIHesaplama";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="fh5co-parallax" style=" background-image:url(../../Content/images/BMI.jpg);" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-8 col-md-offset-2 col-sm-12 col-sm-offset-0 col-xs-12 col-xs-offset-0 text-center fh5co-table">
                <div class="fh5co-intro fh5co-table-cell animate-box">
                    <h1 class="text-center">Vücut Kitle İndexi Hesaplama</h1>
                    <p>İdeal Kilon ne ? </p>
                </div>

            </div>
        </div>
    </div>


</div><!-- end: fh5co-parallax -->


<link href="https://fonts.googleapis.com/css?family=Quicksand:400,700" rel="stylesheet">
<link href="~/Content/css/BMI.css" rel="stylesheet">
<div cla>
    <h3><b>V</b>ücut <b>K</b>itle <b>İ</b>ndexi Hesaplayıcı</h3>
    <form class="form" id="form" onsubmit="return validateForm()">
        <div class="row-one">
            <input type="text" class="text-input" id="age" autocomplete="off" required /><p class="text">Yaş</p>
            <label class="container">
                <input type="radio" name="radio" id="f"><p class="text">Kadın</p>
                <span class="checkmark"></span>
            </label>
            <label class="container">
                <input type="radio" name="radio" id="m"><p class="text">Erkek</p>
                <span class="checkmark"></span>
            </label>
        </div>

        <div class="row-two">
            <input type="text" class="text-input" id="height" autocomplete="off" required><p class="text">Boy (cm)</p>
            <input type="text" class="text-input" id="weight" autocomplete="off" required><p class="text">Kilo(kg)</p>
        </div>
        <button type="button" id="submit">Kaydet</button>
    </form>
</div>

<div id="fh5co-blog-section">
    <div class="container">
        <div class="row">
        </div>
    </div>
</div>
