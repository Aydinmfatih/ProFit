@using ProFit.Models.pro_fitdb
@model site_settings
@{
    ViewBag.Title = "SiteGuncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="col-md-6">
    <div class="card">
        @using (Html.BeginForm("SiteGuncelle", "AdminSiteAyarlari", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {


            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.site_settings_ID)

            <div class="form-group row">
                <label class="col-md-3">Resim Dosyasını Ekleyiniz..</label>
                <div class="col-md-9">
                    <div class="custom-file">
                        @*<img src="~/Content/images/logo.png" height="80px" width="100px" />*@

                        <input type="file"
                               class="custom-file-input"
                               id="validatedCustomFile"
                               name="file"
                               required />
                    </div>
                </div>
            </div>




            <div class="border-top">
                <div class="card-body">
                    
                    <div class="col-lg-8 col-md-12">
                        <label class="col-md-3 mt-3">Telefon No: </label>

                        @Html.EditorFor(model => model.site_settings_PHONE, new { htmlAttributes = new { @class = "form-control" } })

                    </div>
                    <div class="col-lg-8 col-md-12">
                        <label class="col-md-3 mt-3">Mail : </label>
                        @Html.EditorFor(model => model.site_settings_MAIL, new { htmlAttributes = new { @class = "form-control" } })


                    </div>
                    <div class="col-lg-8 col-md-12">
                        <label class="col-md-3 mt-3">YOUTUBE LİNK :</label>
                        @Html.EditorFor(model => model.site_settings_YOUTUBE, new { htmlAttributes = new { @class = "form-control" } })


                    </div>
                    <div class="col-lg-8 col-md-12">
                        <label class="col-md-3 mt-3">TWİTTER LİNK: </label>
                        @Html.EditorFor(model => model.site_settings_TWITTER, new { htmlAttributes = new { @class = "form-control" } })

                    </div>
                    <div class="col-lg-8 col-md-12">
                        <label class="col-md-3 mt-3">İNSTAGRAM LİNK:</label>
                        @Html.EditorFor(model => model.site_settings_INSTAGRAM, new { htmlAttributes = new { @class = "form-control" } })



                    </div>

                    <div class="border-top">
                        <div class="card-body">
                            <button type="submit" class="btn btn-primary">
                                Kaydet
                            </button>
                        </div>
                    </div>






                </div>
            </div>
        }
    </div>
</div>